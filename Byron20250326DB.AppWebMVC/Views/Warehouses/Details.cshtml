}

<div class="container mt-4">
    <h1>Detalles</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            Almacén
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.WarehouseName)
