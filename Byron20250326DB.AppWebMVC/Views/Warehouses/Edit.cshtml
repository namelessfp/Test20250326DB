@model Byron20250326DB.AppWebMVC.Models.Warehouse

@{
    ViewData["Title"] = "Editar";
}

<div class="container mt-4">
    <h1>Editar</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            Almacén
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 col-lg-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group mb-3">
                            <label asp-for="WarehouseName" class="control-label"></label>
                            <input asp-for="WarehouseName" class="form-control" />
                            <span asp-validation-for="WarehouseName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-outline-secondary ml-2">Volver a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}