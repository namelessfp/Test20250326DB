@model Byron20250326DB.AppWebMVC.Models.Warehouse

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<div class="alert alert-warning">¿Estás seguro de que quieres eliminar esto?</div>

<div class="card">
    <div class="card-header">
        Detalles del Almacén
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WarehouseName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WarehouseName)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete" class="d-inline-block">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
    <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
</div>